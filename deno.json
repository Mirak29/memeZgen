{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "tasks": {
    "lint": "deno lint",
    "check": "deno check src/**/*.tsx",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "dev:front": "deno run --allow-env --allow-sys --allow-read --allow-write --allow-net --allow-run npm:vite",
    "dev:back": "deno serve --port 3001 --allow-env --allow-net api/server.ts",
    "dev": "deno run --allow-all dev.ts",
    "build": "deno run --allow-env --allow-sys --allow-read --allow-write --allow-net --allow-run npm:vite build",
    "preview": "deno run --allow-env --allow-sys --allow-read --allow-write --allow-net --allow-run npm:vite preview"
  }
}
