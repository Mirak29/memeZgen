{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "tasks": {
    "lint": "deno lint",
    "check": "deno check src/**/*.tsx",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  }
}
